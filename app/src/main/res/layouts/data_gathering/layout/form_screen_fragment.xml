<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".data_gathering.FormScreenFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:scrollbars="vertical"
            android:text="@string/template_text"
            android:textSize="@dimen/datagathering_description_font_size" />

        <ImageView
            android:id="@+id/relationshipRepresentation"
            android:layout_width="@dimen/datagathering_image_width"
            android:layout_height="@dimen/datagathering_image_height"
            android:src="@drawable/ic_baseline_crop_square_24"
            app:srcCompat="@drawable/ic_baseline_crop_square_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_list_lin_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/inputs_horizontal_margin"
        android:paddingEnd="@dimen/inputs_horizontal_margin"/>

</LinearLayout>