<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/sync_method_header">

        <ListPreference
            app:defaultValue="email"
            app:entries="@array/settings_sync_method_entries"
            app:entryValues="@array/settings_sync_method_values"
            app:key="sync_method"
            app:title="@string/settings_sync_method"
            app:useSimpleSummaryProvider="true"
            />

        <Preference
            app:key="sync_try_rest"
            app:title="@string/settings_try_rest_sync"
            />
    </PreferenceCategory>


    <PreferenceCategory app:title="@string/sync_email_settings_header">

        <EditTextPreference
            app:key="default_email"
            app:title="@string/settings_default_email"
            app:useSimpleSummaryProvider="true"
            android:lines="1"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_rest_settings_header">

        <EditTextPreference
            app:key="default_restAPI_url"
            app:title="@string/settings_default_restAPI_url"
            app:useSimpleSummaryProvider="true"
            android:lines="1"
            />
        <EditTextPreference
            app:key="default_restAPI_usr"
            app:title="@string/settings_default_restAPI_usr"
            app:useSimpleSummaryProvider="true"
            android:lines="1"
            />
        <EditTextPreference
            app:key="default_restAPI_pwd"
            app:title="@string/settings_default_restAPI_pwd"
            app:useSimpleSummaryProvider="true"
            android:lines="1"
            />

    </PreferenceCategory>

</PreferenceScreen>